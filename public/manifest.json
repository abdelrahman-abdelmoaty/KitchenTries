{
  "name": "Kitchentries - Share Your Kitchen Stories",
  "short_name": "Kitchentries",
  "description": "Join our community of home chefs, share your favorite recipes, and discover culinary inspirations from around the world.",
  "start_url": "/",
  "display": "standalone",
  "orientation": "portrait",
  "theme_color": "#10b981",
  "background_color": "#ffffff",
  "prefer_related_applications": false,
  "categories": ["food", "cooking", "recipes", "lifestyle"],
  "launch_handler": {
    "client_mode": ["navigate-existing", "auto"]
  },
  "edge_side_panel": {
    "preferred_width": 480
  },
  "id": "kitchentries-app",
  "scope": "/",
  "icons": [
    {
      "src": "/icons/favicon.ico",
      "type": "image/x-icon"
    }
  ],
  "screenshots": [],
  "share_target": {
    "action": "/share-target/",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "name",
      "text": "description",
      "url": "link",
      "files": [
        {
          "name": "images",
          "accept": ["image/*"]
        }
      ]
    }
  },
  "related_applications": [],
  "protocol_handlers": [
    {
      "protocol": "web+recipe",
      "url": "/recipes?id=%s"
    }
  ],
  "lang": "en",
  "dir": "ltr"
}
